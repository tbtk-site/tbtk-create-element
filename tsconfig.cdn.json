// CDN(ブラウザ向け)のビルド設定
{
  "compilerOptions": {
    "target": "ES2015",                       // ES2015向けのコードを出す
    "module": "ES2015",                       // ES2015モジュールを使う
    "moduleResolution": "node",               // とりあえず「node」でいい
    "outDir": "./dist",                       // 出力先
    "esModuleInterop": true,                  // CommonJSとの相互運用
    "forceConsistentCasingInFileNames": true, // ファイル名の大文字小文字は区別する
    "strict": true,                           // 厳密オプション
    "lib": ["ES2015", "DOM"],                 // DOMを使うライブラリなので
  },
  "include": [
    "./src"                                   // 余計なファイルをビルドされると困るため
  ]
}